                        "https://images.unsplash.com/photo-1600185365483-26d7a4cc7519?ixlib=rb-1.2.1&auto=format&fit=crop&w=1025&q=80"
                    ]
                }
            };

            // Open modal when product is clicked
            document.querySelectorAll('.product-card').forEach(card => {
                card.addEventListener('click', function(e) {
                    // Don't open modal if clicking on wishlist button
                    if (e.target.classList.contains('wishlist-btn')) {
                        return;
                    }

                    const productId = this.getAttribute('data-product-id');
                    const product = products[productId];
                    
                    if (product) {
                        // Set product ID on modal for reference
                        productModal.setAttribute('data-product-id', productId);
                        
                        // Set modal content
                        modalTitle.textContent = product.title;
                        modalProductTitle.textContent = product.title;
                        modalCategory.textContent = product.category;
                        if (product.oldPrice) {
                            modalPrice.innerHTML = `R${product.price} <span>R${product.oldPrice}</span>`;
                        } else {
                            modalPrice.innerHTML = `R${product.price}`;
                        }
                        
                        // Set description
                        document.querySelector('.modal-description').innerHTML = `
                            <p>${product.description}</p>
                        `;
                        
                        // Clear previous thumbnails
                        thumbnailContainer.innerHTML = '';
                        
                        // Add images to modal
                        product.images.forEach((img, index) => {
                            const thumbnail = document.createElement('img');
                            thumbnail.src = img;
                            thumbnail.alt = `${product.title} view ${index + 1}`;
                            thumbnail.className = 'thumbnail';
                            if (index === 0) {
                                thumbnail.classList.add('active');
                                modalMainImage.src = img;
                                modalMainImage.alt = `${product.title} main view`;
                            }
                            
                            thumbnail.addEventListener('click', function() {
                                document.querySelectorAll('.thumbnail').forEach(t => t.classList.remove('active'));
                                this.classList.add('active');
                                modalMainImage.src = this.src;
                            });
                            
                            thumbnailContainer.appendChild(thumbnail);
                        });
                        
                        // Reset size selection
                        document.querySelectorAll('.size-btn').forEach(btn => btn.classList.remove('selected'));
                        
                        // Show modal
                        productModal.style.display = 'block';
                        document.body.style.overflow = 'hidden';
                    }
                });
            });

            // Close modal
            modalClose.addEventListener('click', function() {
                productModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            });

            // Close when clicking outside modal content
            productModal.addEventListener('click', function(e) {
                if (e.target === productModal) {
                    productModal.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }
            });

            // Close with ESC key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && productModal.style.display === 'block') {
                    productModal.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }
            });
            
            // Initialize everything
            initWishlist();
            initCart();
            initSizeSelection();
            initAddToCart();
            updatePriceValue();
        });
    </script>
</body>
</html>
